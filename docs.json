{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AmazonCoin ($AMZ)",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Whitepaper",
        "groups": [
          {
            "group": "Introdução",
            "pages": [
              "introducao/bem-vindo",
              "introducao/motivacao",
              "introducao/pedido-de-ajuda",
              "introducao/objetivo"
            ]
          },
          {
            "group": "AMZ - Token",
            "pages": [
              "token/amazon-token",
              "token/tokenomics",
              "token/transparencia"
            ]
          },
          {
            "group": "Tecnologia",
            "pages": [
              "tecnologia/solana",
              "tecnologia/contratos-inteligentes",
              "tecnologia/seguranca"
            ]
          },
          {
            "group": "Roadmap",
            "pages": ["roadmap/fases", "roadmap/futuro"]
          },
          {
            "group": "Equipe & Comunidade",
            "pages": [
              "equipe/fundadores",
              "equipe/parceiros",
              "equipe/comunidade"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentação",
          "href": "https://amazoncoin.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Comunidade",
          "href": "https://amazoncoin.com/comunidade",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://amazoncoin.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:contato@amazoncoin.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.amazoncoin.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/amazoncoin",
      "github": "https://github.com/amazoncoin",
      "linkedin": "https://linkedin.com/company/amazoncoin",
      "telegram": "https://t.me/amazoncoin",
      "discord": "https://discord.gg/amazoncoin"
    }
  }
}
